@model ASPGTRTraining.Model.Entity.Designation

@{
    ViewData["Title"] = Model == null ? "Create Designation" : "Edit Designation";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col text-center">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="DesignationSave" method="post">
                @if (Model != null)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Designation Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter designation name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-2"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-x me-2"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
