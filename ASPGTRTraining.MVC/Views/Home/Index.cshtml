@model List<Department>
@{
    ViewData["Title"] = "Home Page";
}
@section Style {
    <style>
        h1 {
            color: red;
        }

        h2 {
            color: blue;
            background-color: bisque;
            padding: 10px;
            border-radius: 5px;
        }

        .department-item {
            margin-bottom: 20px;
        }
    </style>
}

<div class="container text-center">
    <h1 class="display-4 my-4">Welcome HR</h1>
    <p class="lead">
        <a href="https://learn.microsoft.com/aspnet/core" class="text-decoration-none">Web App Using Asp.net along Repository Implmentation</a>.
    </p>

   
    <div class="my-4">
        <a asp-action="DepartmentSave" asp-controller="Home" class="btn btn-primary">Create New Department</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 department-item">
                <h2><a asp-action="DepartmentSave" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-success">Link @item.Id</a></h2>
                <h2><a asp-action="DepartmentDelete" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-danger">Delete @item.Id</a></h2>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Name: @item.Name</h5>
                        <p class="card-text">Created At: @item.CreatedAt.ToShortDateString()</p>
                        <p class="card-text">Uploaded By: @item.UpBy</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="my-4">
        @for (int i = 1; i < 10; i++)
        {
            <p class="d-inline-block mx-2">@i</p>
        }
    </div>

    @section jekono {
        <div class="alert alert-info mt-4" role="alert">
            Jekono section
        </div>
    }
</div>
